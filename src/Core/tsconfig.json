{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es6",
	  "lib": ["ES2020"],
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "sourceMap": true,
	  "strictPropertyInitialization": false,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "experimentalDecorators": true,
	  "esModuleInterop": true,
	  "composite": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", ".vscode-test", "_code-dep","dist"],
}