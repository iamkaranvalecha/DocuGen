{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es6",
	  "outDir": "./dist",
	  "rootDir": "../../",
	  "sourceMap": true,
	  "strictPropertyInitialization": false,
	  "declaration": false,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "experimentalDecorators": true,
	  "esModuleInterop": true
	},
	"include": [
		"src/**/*", // Include all files in actions/src
		"../../Core/src/**/*" // Include files from the core/src directory,
	],
	"references": [
		{ "path": "../../Core" }
	],
	"exclude": ["./node_modules/@types","node_modules", ".vscode-test", "_code-dep", "dist"],
}