{
  "name": "docugen",
  "displayName": "DocuGen",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docugen.scanRepository",
        "title": "Generate Document by scanning repository"
      }
    ],
    "configuration":[
      {
        "title": "DocuGen",
        "scope": "resource",
        "properties": {
          "docugen.defaultDocumentFileName": {
            "type": "string",
            "description": "File name",
            "default": "DocuGen",
            "title": "DefaultDocumentFileName",
            "workspace": true,
            "scope": "resource"
          },
          "docugen.includedItems": {
            "type": "array",
            "description": "Automatically filled workspace level setting to save files & folders to generate documentation of",
            "default": [],
            "title": "Included File & Folders",
            "workspace": true,
            "scope": "resource"
          },
          "docugen.excludedItems": {
            "type": "array",
            "description": "Comma-separated item names to exclude from generation documentation",
            "default": [],
            "title": "Exclude File & Folders",
            "workspace": true,
            "scope": "resource"
          },
          "docugen.excludedExtensions": {
            "type": "array",
            "description": "Comma-separated extensions to exclude generating documentation",
            "default": [],
            "title": "Exclude File & Folders",
            "workspace": true,
            "scope": "resource"
          },
          "docugen.modelselection": {
            "type": "boolean",
            "description": "Local model (true) or OpenAI (false)",
            "default": true,
            "title": "Model Selection source",
            "workspace": true,
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.6",
    "openai": "^4.57.0"
  }
}
